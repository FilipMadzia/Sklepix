@using Sklepix.Data.Entities;
@using Sklepix.Models.Aisles;
@model AisleCreateViewModel

@{
	ViewData["Title"] = "Dodaj alejkę";
	Layout = "~/Views/Shared/_Layout.cshtml";
	List<UserEntity> users = Model.Users;
}

<h1>
	<a class="btn btn-outline-secondary" asp-action="Index"><img class="icon" src="~/icons/arrow-left.svg" /></a>
	@ViewData["Title"]
</h1>

<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" autofocus />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<hr />
			<div class="form-group">
				<label asp-for="UserId" class="control-label"></label>
				<select asp-for="UserId" class="form-select" required>
					@if(users.Count == 0)
					{
						<option>Nie znaleziono żadnych użytkowników</option>
					}
					@foreach(UserEntity user in users)
					{
						<option value="@user.Id">@user.FirstName @user.LastName</option>
					}
				</select>
			</div>
			<br />
			<div class="form-group">
				<input type="submit" value="Dodaj" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>