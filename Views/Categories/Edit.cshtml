@using Sklepix.Models.Categories;
@model CategoryCreateViewModel

@{
	ViewData["Title"] = "Edytuj kategorię";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
	<a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@Model.Id"><img class="icon" src="~/icons/arrow-left.svg" /></a>
	@ViewData["Title"]
</h1>

<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" autofocus />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<br />
			<div class="form-group">
				<input type="submit" value="Zapisz" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>