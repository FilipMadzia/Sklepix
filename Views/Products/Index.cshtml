@model IEnumerable<ProductDetailsViewModel>

@{
	ViewData["Title"] = "Produkty";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"] <a class="btn btn-primary" asp-action="Create">Dodaj produkt</a></h1>

<table class="table">
	<thead>
		<tr>
			<th class="th-lg">
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Count)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Price)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Margin)
			</th>
			<th class="th-lg">
				@Html.DisplayNameFor(model => model.TotalPriceWithMargin)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Category)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ShelfAndAisle)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model)
		{
			<tr class="align-middle row-link" onclick="location.href='@Url.Action("Details", new { Id = item.Id })'">
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Count)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Price) zł
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Margin)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.TotalPriceWithMargin) zł
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Category)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ShelfAndAisle)
				</td>
				<td class="text-right">
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
				</td>
			</tr>
		}
	</tbody>
</table>
