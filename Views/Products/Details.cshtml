@using Sklepix.Data.Entities
@model ProductEntity

@{
    ViewData["Title"] = "Szczegóły produktu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string? categoryName = Model.Category != null ? Model.Category.Name : String.Empty;
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Name) kategorii
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => categoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Shelf.Number) półki
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Shelf.Number) | 
            @Html.DisplayFor(model => model.Shelf.Aisle.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edytuj</a> |
    <a asp-action="Index">Wróć</a>
</div>
