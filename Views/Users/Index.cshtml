@model IEnumerable<UserViewModel>

@{
	ViewData["Title"] = "Pracownicy";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"] <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Dodaj pracownika</a></h1>

<table class="table">
	<thead>
		<tr>
			<th class="th-lg">
				@Html.DisplayNameFor(model => model.UserName)
			</th>
			<th class="th-lg">
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th class="th-lg">
				@Html.DisplayNameFor(model => model.PhoneNumber)
			</th>
			<th class="th-lg">
				@Html.DisplayNameFor(model => model.Roles)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model)
		{
			<tr class="align-middle row-link" onclick="location.href='@Url.Action("Details", new { Id = item.Id })'">
				<td>
					@Html.DisplayFor(modelItem => item.UserName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PhoneNumber)
				</td>
				<td>
					@foreach(string role in item.Roles)
					{
						@Html.DisplayFor(roleName => role)
					}
				</td>
				<td class="text-right">
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
				</td>
			</tr>
		}
	</tbody>
</table>
