@model IEnumerable<UserDetailsViewModel>

@{
	ViewData["Title"] = "Pracownicy";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"] <a class="btn btn-primary" asp-action="Create">Dodaj pracownika</a></h1>

<table class="table">
	<thead>
		<tr>
			<th class="th-lg">
				@Html.DisplayNameFor(model => model.LastName)
			</th>
			<th class="th-lg">
				@Html.DisplayNameFor(model => model.FirstName)
			</th>
			<th class="th-lg">
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th class="th-lg">
				@Html.DisplayNameFor(model => model.PhoneNumber)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model)
		{
			<tr class="align-middle row-link" onclick="location.href='@Url.Action("Details", new { Id = item.Id })'">
				<td>
					@Html.DisplayFor(modelItem => item.LastName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FirstName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PhoneNumber)
				</td>
				<td class="text-right">
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
				</td>
			</tr>
		}
	</tbody>
</table>
